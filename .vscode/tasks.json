{
	"version": "2.0.0",
	"tasks": [
        {
            "type": "cargo",
            "command": "build",
            "args": ["--all-features"],
            "problemMatcher": [
                "$rustc"
            ],
            "group": "build",
            "label": "Cargo: Build"
        },
        {
            "type": "cargo",
            "command": "check",
            "args": ["--all-features"],
            "problemMatcher": [
                "$rustc"
            ],
            "group": "build",
            "label": "Cargo: Check"
        },
        {
            "type": "cargo",
            "command": "test",
            "args": ["--all-features"],
            "problemMatcher": [
                "$rustc"
            ],
            "group": "test",
            "label": "Cargo: Test"
        },
        {
            "type": "cargo",
            "command": "test",
            "args": ["--doc"],
            "problemMatcher": [
                "$rustc"
            ],
            "group": "test",
            "label": "Cargo: Doctests"
        },
        {
            "type": "cargo",
            "command": "clean",
            "problemMatcher": [
                "$rustc"
            ],
            "group": "test",
            "label": "Cargo: Clean"
        },
        {
            "type": "cargo",
            "command": "doc",
            "args": ["--all-features", "--no-deps"],
            "problemMatcher": [
                "$rustc"
            ],
            "label": "Cargo: Doc"
        }
    ]
}
